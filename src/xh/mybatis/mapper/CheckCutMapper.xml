<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xh.mybatis.mapper.CheckCutMapper">
    <!-- redis缓存  LRU FIFO-->
    <!-- <cache eviction="LRU" flushInterval="-1" size="1024" readOnly="true"
     type="xh.mybatis.tools.MybatisRedisCache"/> -->
    <!--    <cache eviction="FIFO" flushInterval="600000" size="1024"
            readOnly="true" />  -->
    <!--查询网络优化申请所有记录 -->
    <select id="selectAll" parameterType="map" resultType="java.util.HashMap">
        select a.*
        ,b.unit as unit1
        ,b.unitType as initType1
        ,b.userType as userType1
        from xhgmnet_bs_checkcut as a LEFT JOIN xhgmnet_web_user as b on a.userName=b.user where 1=1
        <choose>
        <when test="roleId &lt; 10000">
         and a.userName=#{user}
        </when>    
        </choose>

        order by id desc limit #{start},#{limit}
    </select>
    <!--查询申请所有记录总数 -->
    <select id="dataCount" parameterType="map" resultType="int" useCache="true">
        select count(id) from xhgmnet_bs_checkcut where 1=1
        <choose>
        <when test="roleId &lt; 10000">
         and userName=#{user}
        </when>   
        </choose>
    </select>
    <!--查询申请进度 -->
    <select id="applyProgress" parameterType="int" resultType="map"
            useCache="true">
        select * from xhgmnet_bs_checkcut where id=#{id}
    </select>

    <!--运维人员发起核减申请 -->
    <insert id="insertCheckCut" useGeneratedKeys="true" keyProperty="id"
            parameterType="xh.mybatis.bean.CheckCutBean">
        insert into
        xhgmnet_bs_checkcut(userUnit,tel,fileName1,filePath1,note1,requestTime,userName) values(#{userUnit},#{tel},#{fileName1},#{filePath1},#{note1},#{requestTime},#{userName})
    </insert>

    <!--运维人员重新发起核减申请 -->
    <update id="checkedNegOne" parameterType="xh.mybatis.bean.CheckCutBean">
        update xhgmnet_bs_checkcut set
        fileName1=#{fileName1},filePath1=#{filePath1},note1=#{note1},time1=#{time1},user1=#{user1},checked=#{checked} where id=#{id}
    </update>

    <!--管理方审核核减申请 -->
    <update id="checkedOne" parameterType="xh.mybatis.bean.CheckCutBean">
        update xhgmnet_bs_checkcut set
        user2=#{user2},time2=#{time2},note2=#{note2},checked=#{checked} where id=#{id}
    </update>

    <!--运维人员提交相关资料-->
    <update id="checkedTwo" parameterType="xh.mybatis.bean.CheckCutBean">
        update xhgmnet_bs_checkcut set
        user3=#{user3},time3=#{time3},note3=#{note3},fileName2=#{fileName2},filePath2=#{filePath2},checked=#{checked} where id=#{id}
    </update>

    <!--运维人员结束流程-->
    <update id="checkedThree" parameterType="xh.mybatis.bean.CheckCutBean">
        update xhgmnet_bs_checkcut set
        user4=#{user4},time4=#{time4},note4=#{note4},checked=#{checked} where id=#{id}
    </update>

    <!-- 查询系统升级表格数据 -->
    <select id="sheetShow" parameterType="map" resultType="xh.mybatis.bean.CheckCutSheet">
        select * from xhgmnet_bs_checkcutsheet where id=#{id}
    </select>

    <!-- 修改系统升级表格 -->
    <update id="sheetChange" parameterType="xh.mybatis.bean.CheckCutSheet">
        replace into xhgmnet_bs_checkcutsheet(id,bsStationNote,faultNote,department,checkTime,suggestion,
        draftingPerson,checkPerson)
        values (#{id},#{bsStationNote},#{faultNote},#{department},#{checkTime},#{suggestion},
        #{draftingPerson},#{checkPerson})
    </update>

</mapper>
